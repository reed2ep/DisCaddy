<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DisCaddy.Views.CourseSelectPage"
             Title="CourseSelectPage">
    <VerticalStackLayout>
        <StackLayout Padding="10" Spacing="8">
            <Button
                x:Name="CourseCreateBtn"
                Text="Go to the Map" 
                SemanticProperties.Hint="Create New Course"
                Clicked="OnCourseCreateClicked"
                HorizontalOptions="Fill" />
            
            <CollectionView ItemsSource="{Binding Courses}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10" ColumnDefinitions="Auto, *, Auto" VerticalOptions="Center">
                            <!-- Course info -->
                            <VerticalStackLayout Grid.Column="1" Padding="10,0">
                                <Label Text="{Binding Name}"
                           FontSize="16"
                           FontAttributes="Bold" />
                            </VerticalStackLayout>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>