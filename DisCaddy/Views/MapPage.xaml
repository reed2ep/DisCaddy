<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             x:Class="DisCaddy.Views.MapPage"
             Title="MapPage">

    <StackLayout Spacing="10" Padding="12">

        <!-- Create button shows when no selection and not creating -->
        <Button Text="Create Course"
                IsVisible="{Binding ShowCreateButton}"
                Command="{Binding StartCreateCourseCommand}" />

        <!-- Name entry dialog shows only while creating -->
        <Frame IsVisible="{Binding ShowNameDialog}"
               HasShadow="True" Padding="12" CornerRadius="12">
            <VerticalStackLayout Spacing="8">
                <Label Text="New Course" FontAttributes="Bold" />
                <Entry Placeholder="Enter course name"
                       Text="{Binding CourseName}" />
                <HorizontalStackLayout Spacing="8" HorizontalOptions="End">
                    <Button Text="Cancel" Command="{Binding CancelCreateCourseCommand}" />
                    <Button Text="Save"   Command="{Binding SaveCourseCommand}" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Frame>

        <!-- Optional: show current course -->
        <HorizontalStackLayout IsVisible="{Binding ShowSelectedRow}">
            <Label Text="Selected: " />
            <Label Text="{Binding SelectedCourse.Name, TargetNullValue=''}" FontAttributes="Bold"/>
        </HorizontalStackLayout>

        <maps:Map x:Name="MyMap"
                  IsShowingUser="True"
                  MapType="Hybrid"
                  HeightRequest="500"
                  VerticalOptions="FillAndExpand" />

        <Label x:Name="DistanceLabel"
               Text="Total Distance: 0 ft"
               FontSize="16"
               HorizontalOptions="Center" />

        <HorizontalStackLayout Spacing="8" HorizontalOptions="Center">
            <Button Text="Clear Path" Clicked="OnClearClicked" />
            <Button Text="Save Hole"  Clicked="OnSaveHole" />
        </HorizontalStackLayout>

    </StackLayout>
</ContentPage>